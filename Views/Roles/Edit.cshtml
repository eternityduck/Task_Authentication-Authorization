@model TaskAuthenticationAuthorization.Models.User
@{
    ViewBag.Title = "Editing user";
}
<form asp-action="Edit" asp-controller="Roles">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Role.Name" class="control-label">Role</label>
        <input type="text" asp-for="Role.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BuyerType" class="control-label">Role</label>
        <select asp-for="BuyerType" class="form-control" asp-items="Html.GetEnumSelectList<BuyerType>()">
            <option selected="selected" value="">Please select</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>