@model IEnumerable<TaskAuthenticationAuthorization.Models.User>
@{
    ViewBag.Title = "List of users";
}



<table class="table">
    <tr><th>Email</th><th>BuyerTyper</th><th>Role</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.BuyerType</td>
            <td>@(user.RoleId.Value == 1 ? "admin" : "buyer")</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>