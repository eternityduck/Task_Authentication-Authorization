@model TaskAuthenticationAuthorization.ViewModels.LoginViewModel

<h2>Log in</h2>



<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
   
    
        <a asp-action="Register" asp-controller="Account">Registration</a>
        <div>
            <div class="form-group">
                <label asp-for="Email">Enter Email</label>
                <input type="text" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Enter Password</label>
                <input type="text" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-dark" />
            </div>

        </div>
    
</form>